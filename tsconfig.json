{
    "compilerOptions": {
        "skipLibCheck": true,
        "outDir": "public",
        "noFallthroughCasesInSwitch": true,
        "module": "es6",
        "target": "es5",
        "lib": ["es6", "es7", "ESNext", "dom", "DOM.Iterable"],
        "allowJs": true,
        "jsx": "react-jsx",
        "baseUrl": "./src",
        "moduleResolution": "node",
        "forceConsistentCasingInFileNames": true,
        "noImplicitReturns": true,
        "esModuleInterop": true,
        "noImplicitThis": true,
        "noImplicitAny": false,
        "moduleDetection": "auto",
        "strictNullChecks": false,
        "sourceMap": true,
        "pretty": true,
        "resolveJsonModule": true,
        "allowSyntheticDefaultImports": true,
        "isolatedModules": false,
        "strict": true,
        "declaration": true,
        "noEmit": true,
        "types": ["react", "node"]
    },
    "include": ["src/**/*", "webpack.config.js"],
    "exclude": ["node_modules", "src/**/*.test", "public"],
}